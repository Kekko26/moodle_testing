{{!
    @template local_amos/translator_paginator

    Renders the paginator widget.

    Context variables required for this template:
    * hasmultiplepages
    * navigation

    Example context (json):
    {
        "hasmultiplepages": true,
        "navigation": [
            {
                "iscurrent": true,
                "islink": false,
                "label": 1
            },
            {
                "iscurrent": false,
                "islink": true,
                "value": 2,
                "label": 2
            }
        ]
    }
}}

<div class="amospaginator">
    {{#hasmultiplepages}}
        {{#navigation}}
            <span class="d-inline-block small p-1 paginatoritem {{#iscurrent}}current{{/iscurrent}}">
                {{#islink}}
                    <a data-paginatorlink="{{value}}" href="?fpg={{value}}">{{{label}}}</a>
                {{/islink}}
                {{^islink}}
                    {{{label}}}
                {{/islink}}
            </span>
        {{/navigation}}
    {{/hasmultiplepages}}
</div>
